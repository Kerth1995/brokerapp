<%=form_tag tarea_path,method: :post do%>
<div>
  <p id="notice"><%= notice %></p>

<h1>Tareas</h1>

</div>

<table>
  <thead>
    <tr>
      <th>Id tarea</th>
      <th>Nombre</th>
      <th>Descripcion</th>
      <th>Estado</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tareas.each do |tarea| %>
      <tr>
        <td><%= tarea.id_tarea %></td>
        <td><%= tarea.nombre %></td>
        <td><%= tarea.descripcion %></td>
        <td><%= tarea.estado %></td>
        <td><%= link_to 'Show', tarea %></td>
        <td><%= link_to 'Edit', edit_tarea_path(tarea) %></td>
        <td><%= link_to 'Eliminar', tarea, method: :delete, data: { confirm: 'Estas seguro de Eliminar?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tarea', new_tarea_path %>

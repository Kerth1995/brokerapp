
<tr>
 	<td><%= tarea.codigo_tarea%></td>
    <td id="tarea_nombre<%=tarea.id%>"><%= tarea.nombre%></td>
    <td><%= tarea.descripcion%></td>
    <td><%= tarea.estado%></td>
    <td><%= tarea.rubro%></td>
    <td><button type="button" class="btn btn-primary" data-toggle="modal" data-target="#actualizarTarea_<%= tarea.id%>">Editar</button></td>
    <td><button type="button" class="btn btn-info">Desactivar</button></td>
    <td><%= link_to 'Eliminar',tarea, method: :delete,data: {confirm:'EstÃ¡ seguro que quiere eliminar?'}, class:"btn btn-danger", remote:true%></td>
</tr> 



<%= form_with(model:tarea) do |form| %>
<div class="modal fade" id="actualizarTarea_<%= tarea.id%>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">

       <div class="field">
    <%= form.label :'Ingresar codigo de tarea' %>
    <%= form.text_field :codigo_tarea, class:"form-control" %>
  </div>

  <div class="field">
    <%= form.label :'Ingresar Nombre' %>
    <%= form.text_field :nombre, class:"form-control" %>
  </div>

  <div class="field">
    <%= form.label :'Ingresar Descripcion' %>
    <%= form.text_field :descripcion, class:"form-control" %>
  </div>

  <div class="field">
    <%= form.label :'Ingresar Estado' %>
    <%= form.text_field :estado, class:"form-control" %>
  </div>

  <div class="field">
    <%= form.label :'Seleccionar rubro' %>
    <%= form.text_field :rubro, class:"form-control" %>
  </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
        <%= form.submit "Actualizar", class:"btn btn-primary"  %>
      </div>
    </div>
  </div>
</div>
<% end %>
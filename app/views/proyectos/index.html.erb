<div class="main_content">

    <p id="notice"><%= notice %></p>

  <div class="row">
    <div class="header col-lg-12 mb-3">
      <h4><span>Proyectos</span></h4>
      <h6><span>Lista</span></h6>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-12">
      <div class="card">
        <div class="card-header">
          <div class="row">
            <div class="col-lg-6">
              <i class="fas fa-table"></i>Proyectos
            </div>
            <div class="col-lg-6 text-right">
              <%= link_to 'Nuevo Proyecto'.html_safe, 
                new_proyecto_path, Class:"btn btn-primary btn-sm"%> 
            </div>
          </div>
        </div>
        <div class="card-body">
          <table class="table table table-hover table-bordered" id="example" >
            <thead class="table-info">
              <tr class="text-center">
                <th>Sector</th>
                <th>Nombre</th>
                <th>F. Inicio</th>
                <th>F. Fin</th>
                <th>Descripción</th>
                <th colspan="2"> Aciones</th>
              </tr>
            </thead>

            <tbody>
              <% @proyectos.each do |proyecto| %>
                <tr>
                  <td><%= proyecto.id_sector %></td>
                  <td><%= proyecto.nombre %></td>
                  <td><%= proyecto.fecha_inicio %></td>
                  <td><%= proyecto.fecha_fin %></td>
                  <td><%= proyecto.descripcion %></td>
                  <td>
                    <%= link_to '<i class="far fa-edit"></i>'.html_safe, 
                      edit_proyecto_path(proyecto)
                    %>
                  </td>
                  <td>
                    <%= link_to '<i class="far fa-trash-alt"></i>'.html_safe, 
                      proyecto, method: :delete, data: { confirm: 'Estás seguro de realizar cambio?' }
                    %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        <div class="card-footer">
        </div>
      </div>
    </div>
  </div>
</div>




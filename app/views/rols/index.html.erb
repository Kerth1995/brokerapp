<p id="notice"><%= notice %></p>

<h6>Rols</h6>

<div class="row mt-3">
  <div class="col-md-12 text-right">
    <%= link_to 'Nuevo rol', new_rol_path, class: "btn btn-primary" %>
  </div>
</div>

<div class="row mt-3 ">
  <div class="col-md-12">
    <table class="table">
      <thead class="thead-dark">
      <tr>
        <th>Codigo</th>
        <th>Nombre</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @rols.each do |rol| %>
        <tr>
          <td><%= rol.codigo %></td>
          <td><%= rol.nombre %></td>
          <td><%= link_to 'Mostrar', rol %></td>
          <td><%= link_to 'Editar', edit_rol_path(rol) %></td>
          <td><%= link_to 'Eliminar', rol, method: :delete, data: {confirm: 'Estas seguro de eliminar ?'} %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>



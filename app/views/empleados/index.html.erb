<p id="notice"><%= notice %></p>

<h1>Empleados</h1>

<table>
  <thead>
    <tr>
      <th>Id tipo documento</th>
      <th>Numero documento</th>
      <th>Nombre</th>
      <th>Apellido paterno</th>
      <th>Apellido materno</th>
      <th>Id privilegio</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @empleados.each do |empleado| %>
      <tr>
        <td><%= empleado.documento_identidad.nombre %></td>
        <td><%= empleado.numero_documento %></td>
        <td><%= empleado.nombre %></td>
        <td><%= empleado.apellido_paterno %></td>
        <td><%= empleado.apellido_materno %></td>
        <td><%= empleado.privilegio_empleado.nombre %></td>
        <td><%= link_to 'Show', empleado %></td>
        <td><%= link_to 'Edit', edit_empleado_path(empleado) %></td>
        <td><%= link_to 'Destroy', empleado, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


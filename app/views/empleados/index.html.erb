<div class="main_content">

    <p id="notice"><%= notice %></p>

  <div class="row">
    <div class="header col-lg-12 mb-3">
      <h4><span>Empleados</span></h4>
      <h6><span>Lista</span></h6>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-12">
      <div class="card">
        <div class="card-header">
          <div class="row">
            <div class="col-lg-6">
              <i class="fas fa-table"></i>Empleados
            </div>
            <div class="col-lg-6 text-right">
              <%= link_to 'Nuevo Empleado'.html_safe, 
                new_empleado_path, Class:"btn btn-primary btn-sm"%> 
            </div>
          </div>
        </div>
        <div class="card-body">
          <table class="table table table-hover table-bordered" id="example" >
            <thead class="table-info">
              <tr class="text-center">
                <th>Documento</th>
                <th>Número</th>
                <th>Nombres</th>
                <th>Apellido paterno</th>
                <th>Apellido materno</th>
                <th>Privilegio</th>
                <th colspan="3">Acciones</th>
              </tr>
            </thead>

            <tbody>
              <% @empleados.each do |empleado| %>
                <tr>
                  <td><%= empleado.id_tipo_documento %></td>
                  <td><%= empleado.numero_documento %></td>
                  <td><%= empleado.nombre %></td>
                  <td><%= empleado.apellido_paterno %></td>
                  <td><%= empleado.apellido_materno %></td>
                  <td><%= empleado.id_privilegio %></td>
                  <!--
                    <td>
                    <%= link_to '<i class="fas fa-eye"></i>'.html_safe, 
                      empleado
                    %>
                  </td>
                  -->
                  <td>
                    <%= link_to '<i class="fas fa-user-edit"></i>'.html_safe, 
                      edit_empleado_path(empleado)
                    %>
                  </td>
                  <td>
                    <%= link_to '<i class="fas fa-user-times"></i>'.html_safe, 
                      empleado, method: :delete, data: { confirm: 'Estás seguro de realizar cambio?' }
                    %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        <div class="card-footer">
        </div>
      </div>
    </div>
  </div>
</div>





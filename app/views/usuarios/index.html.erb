<p id="notice"><%= notice %></p>

<h5>Usuarios</h5>

<div class="row">
  <div class="col-md-8">
    <div class="form-group row">
      <label class="col-sm-2 col-form-label">Usuario</label>
      <div class="col-md-5">
          <input class="form-control form-control-sm">
      </div>
    </div>
  </div>
  <div class="col-md-4">
    <div class="form-group row">
      <button class="btn btn-primary">Buscar</button>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-bordered">
      <thead>
      <tr>
        <th>Usuario</th>
        <th>Correo</th>
        <!--<th>Crypted password</th>
        <th>Salt</th>-->
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @usuarios.each do |usuario| %>
        <tr>
          <td><%= usuario.username %></td>
          <td><%= usuario.email %></td>
          <td><%= link_to 'Mostrar', usuario %></td>
          <td><%= link_to 'Editar', edit_usuario_path(usuario) %></td>
          <td><%= link_to 'Eliminar', usuario, method: :delete, data: {confirm: 'Estas seguro de eliminar?'} %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
<%= link_to 'Nuevo Usuario', new_usuario_path %>
